<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BackgroundSingIn" TargetType="Border">
        <Setter Property="Width" Value="500"/>
        <Setter Property="Height" Value="350"/>
        <Setter Property="Background" Value="#99B5CD"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>
    
    <Style x:Key="UserInfoStyle" TargetType="Border">
        <Setter Property="Background" Value="#8583C2"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>

    <Style x:Key="Info" TargetType="Border">
        <Setter Property="Background" Value="#99B5CD"/>
        <Setter Property="Width" Value="700"/>
        <Setter Property="Height" Value="150"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        
    </Style>
</ResourceDictionary>