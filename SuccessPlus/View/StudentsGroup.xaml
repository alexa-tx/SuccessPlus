<Page x:Class="SuccessPlus.View.StudentsGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuccessPlus.View"
        mc:Ignorable="d"

        Title="StudentsGroup" Height="645" Width="1440">
    <Grid>
        <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                  x:Name="DataGrid" IsReadOnly="True" AutoGenerateColumns="False" 
                  Margin="10"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" MinWidth="100" Width="*" Binding="{Binding IdGroup}" />
                <DataGridTextColumn Header="Название группы" MinWidth="150" Width="*" Binding="{Binding NameGroup}"/>
                <DataGridTextColumn Header="Количество студентов" MinWidth="100" Width="*" Binding="{Binding CountStudents}"/>
                <DataGridTemplateColumn Header="Редактировать" IsReadOnly="True" Width="auto" CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource BtnEdit}" Click="Button_Click_1">
                                    <Image Source="/Assets/BtnEdit.png" Width="20" Height="20"/>
                                </Button>
                                <Button Style="{StaticResource BtnDelete}" Margin="8 0">
                                    <Image Source="/Assets/BtnDelete.png" Width="20" Height="20"/>
                                </Button>

                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Style="{StaticResource BtnAdd}" Click="Button_Click">
            <TextBlock Text="Добавить"></TextBlock>
        </Button>
    </Grid>
</Page>
