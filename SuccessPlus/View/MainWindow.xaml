<Window x:Class="SuccessPlus.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuccessPlus"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1440" Background="#070406">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="75"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Left">
            <Image Source="/Assets/logo.png" Width="80"/>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="700" VerticalAlignment="Center">
            <TextBlock Margin="20 0" Style="{StaticResource MainWindowText}">Учебные группы</TextBlock>
            <TextBlock Margin="50 0" Style="{StaticResource MainWindowText}">Студенты</TextBlock>
            <TextBlock Margin="50 0" Style="{StaticResource MainWindowText}">Рейтинг-листы</TextBlock>
            <TextBlock Margin="50 0" Style="{StaticResource MainWindowText}">Отчет</TextBlock>
        </StackPanel>
        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
        
    </Grid>
</Window>
