<Window x:Class="SuccessPlus.View.EditGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuccessPlus.View"
        mc:Ignorable="d"
        Title="EditGroupWindow" Height="400" Width="600" Background="#9FB5CF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Редактирование группы" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 60"/>
        <TextBox x:Name="GroupNameTextBox" Style="{StaticResource SearchBox}" Height="40" VerticalContentAlignment="Center" Width="400" VerticalAlignment="Bottom">Название группы</TextBox>
        <Button Grid.Row="1" Style="{StaticResource BtnSaveWindow}" Content="Сохранить" VerticalAlignment="Top" Click="Button_Click" Margin="0 20"/>
    </Grid>
</Window>
