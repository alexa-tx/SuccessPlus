<Page x:Class="SuccessPlus.View.File"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SuccessPlus.View"
      mc:Ignorable="d" 
     Height="700" Width="1050"
      Title="File">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="170"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Отчеты" Style="{StaticResource FileMainText}"/>
        <Button x:Name="ReportStudents"  Style="{StaticResource ReportBtn}" Grid.Row="1" VerticalAlignment="Bottom">
            <TextBlock Text="Отчет по студентам"></TextBlock>
        </Button>
         <Button x:Name="ReportGroup" Style="{StaticResource ReportBtn}" Grid.Row="2" VerticalAlignment="Center">
            <TextBlock Text="Отчет по группам"></TextBlock>
        </Button>
         <Button x:Name="ReportDepartment" Style="{StaticResource ReportBtn}" Grid.Row="3" VerticalAlignment="Top" >
            <TextBlock Text="Отчет по отделениям"></TextBlock>
        </Button>
    </Grid>
</Page>
