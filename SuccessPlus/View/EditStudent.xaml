<Window x:Class="SuccessPlus.View.EditStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SuccessPlus.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditStudent"  Background="#99B5CD">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="1*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="NameStudent" Style="{StaticResource NameStudentStyle}"/>

            <TextBlock Text="Группа" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0 0 10 0" Grid.Row="1"/>
            <ComboBox x:Name="ComboBoxStudent" Width="100" Height="30" Grid.Row="1" HorizontalAlignment="Left" Margin="50 0 0 0"/>
        </Grid>
        
        <DataGrid Grid.Column="1" HorizontalAlignment="Center" x:Name="DataGridSubject" AutoGenerateColumns="False" Width="150"  Height="300" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Предмет" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Оценка" Binding="{Binding MarkSubject}"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <Button Style="{StaticResource BtnSave}" Content="Сохранить" VerticalAlignment="Bottom" Click="Button_Click" Margin="0 20"/>
    </Grid>
</Window>
