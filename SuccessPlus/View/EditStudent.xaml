<Window x:Class="SuccessPlus.View.EditStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SuccessPlus.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditStudent"  Background="#99B5CD">

    <Grid>
        <TextBlock x:Name="NameStudent"/>
        <ComboBox x:Name="ComboBoxStudent" Width="100" Height="100"/>
        <DataGrid HorizontalAlignment="Right" x:Name="DataGridSubject" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Предмет" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Оценка" Binding="{Binding MarkSubject}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Style="{StaticResource BtnSave}" Content="Сохранить" VerticalAlignment="Top" Click="Button_Click" Margin="0 20"/>
    </Grid>
</Window>
