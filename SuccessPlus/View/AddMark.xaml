<Window x:Class="SuccessPlus.View.AddMark"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SuccessPlus.View"
      mc:Ignorable="d"
      Title="AddMark" Height="300" Width="400"
        Background="#CCDEE0">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Выберите предмет:" Grid.Row="0" Margin="10"/>
        <ComboBox x:Name="SubjectComboBox" Grid.Row="1" Width="200" Margin="10" Style="{StaticResource ComboBoxStyle}"/>

        <TextBlock Text="Выберите оценку:" Grid.Row="2" Margin="10"/>
        <ComboBox x:Name="MarkComboBox" Grid.Row="3" Width="200" Margin="10" Style="{StaticResource ComboBoxStyle}"/>

        <Button Content="Сохранить" Style="{StaticResource BtnSave}" Grid.Row="4"  HorizontalAlignment="Center" Margin="10" Click="SaveButton_Click"/>
    </Grid>
</Window>
