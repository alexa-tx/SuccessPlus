<Application x:Class="SuccessPlus.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SuccessPlus"
             StartupUri="View/MainWindow.xaml"
    xmlns:Themes ="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/LightTheme.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Style/Color.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Style/Image.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Style/Text.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Style/Button.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Style/DataGrid.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Style/Calendar.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
